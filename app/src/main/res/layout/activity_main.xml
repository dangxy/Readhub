<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dangxy.readhub.model.MainActivity">
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_read_hub_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/color_d70050"
        app:tabIndicatorHeight="5dp"
        app:tabSelectedTextColor="@color/color_222f3b"
        app:tabTextColor="@color/color_808e97" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_read_hub_list"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/common_color_white" />
</LinearLayout>
